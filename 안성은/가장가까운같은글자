import java.util.*;

class Solution {
    public int[] solution(String s) {
        int[] answer = new int[s.length()];
        int[] location = new int[26];
        Arrays.fill(location, -1);
        for( int i = 0; i < s.length(); i++) {
            int index = s.charAt(i) - 'a';
            answer[i] = -1;
            if ( location[index] > -1) answer[i] = i - location[index];
            location[index] = i;
        }
        return answer;
    }
}
